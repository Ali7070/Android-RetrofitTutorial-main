<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_friend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="false"
    android:background="@color/colorPrimary"
    card_view:cardBackgroundColor="#222020"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border2">

        <ImageView
            android:id="@+id/coverImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_toEndOf="@+id/coverImage"
            android:layout_toRightOf="@+id/coverImage"
            android:lines="1"
            android:paddingTop="20dp"
            android:text="@string/title"
            android:textAllCaps="true"
            android:textColor="@color/material_dynamic_neutral_variant100"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/year"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_toEndOf="@+id/title"
            android:layout_toRightOf="@+id/title"
            android:lines="1"
            android:paddingTop="20dp"
            android:text="year"
            android:textAllCaps="true"
            android:textColor="@color/design_default_color_background" />

        <TextView
            android:id="@+id/genres"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_toEndOf="@+id/coverImage"
            android:layout_toRightOf="@+id/coverImage"
            android:lines="1"
            android:paddingTop="20dp"
            android:text="genres"
            android:textAllCaps="true"
            android:textColor="@color/design_default_color_background"
            android:textColorLink="#B50D0D"
            android:textSize="15sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>